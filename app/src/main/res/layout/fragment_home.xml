<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container_scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <!-- Cool hack from https://stackoverflow.com/a/7784186 -->
        <View android:id="@+id/strut"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerHorizontal="true"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/wjr_credentials"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/wjr_credentials"/>

        <TextView
            android:id="@+id/wjr_credential_reason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/wjr_credentials"
            android:text="@string/wjr_credential_reason"/>

        <TextView
            android:id="@+id/username_title"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignRight="@id/strut"
            android:layout_alignEnd="@+id/strut"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/wjr_user"
            android:layout_alignBottom="@+id/wjr_user"
            android:gravity="center_vertical"
            android:text="@string/wjr_username"/>
        <EditText
            android:id="@+id/wjr_user"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/strut"
            android:layout_alignStart="@+id/strut"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/wjr_credential_reason"
            android:hint="@string/wjr_username"
            android:inputType="text"/>

        <TextView
            android:id="@+id/wjr_pass_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/strut"
            android:layout_alignEnd="@+id/strut"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/wjr_pass"
            android:layout_alignBottom="@+id/wjr_pass"
            android:gravity="center_vertical"
            android:text="@string/wjr_pass"/>

        <EditText
            android:id="@+id/wjr_pass"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/strut"
            android:layout_alignStart="@+id/strut"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/wjr_user"
            android:hint="@string/wjr_pass"
            android:inputType="textPassword"/>

        <Button
            android:id="@+id/save_credentials"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/wjr_pass"
            android:text="@string/save_credentials"/>

        <TextView
            android:id="@+id/club_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/strut"
            android:layout_alignEnd="@+id/strut"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/club_spinner"
            android:layout_alignBottom="@+id/club_spinner"
            android:gravity="center_vertical"
            android:text="@string/club"/>

        <Spinner
            android:id="@+id/club_spinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/strut"
            android:layout_alignStart="@+id/strut"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/save_credentials">

        </Spinner>

        <Button
            android:id="@+id/get_clubs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/club_spinner"
            android:text="@string/get_clubs"/>

        <TextView
            android:id="@+id/event_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/strut"
            android:layout_alignEnd="@+id/strut"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/event_spinner"
            android:layout_alignBottom="@+id/event_spinner"
            android:gravity="center_vertical"
            android:text="@string/event"/>

        <Spinner
            android:id="@+id/event_spinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/strut"
            android:layout_alignStart="@+id/strut"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/get_clubs">

        </Spinner>

        <Button
            android:id="@+id/get_events"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/event_spinner"
            android:text="@string/get_events"
            android:enabled="false" />

        <Button
            android:id="@+id/get_competitors"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_below="@+id/get_events"
            android:text="@string/get_competitors"
            android:enabled="false" />

        <!-- In horizontal view, the bottom of a button was cutoff -->
        <View android:id="@+id/bottom_spacer"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_below="@id/get_competitors"
            android:visibility="invisible"/>

    </RelativeLayout>
</ScrollView>